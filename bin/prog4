#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative '../lib/cli'

require 'thor'

%w[SIGINT INT].each do |signal|
  trap signal do
    puts
    exit
  end
end

cli = CLI.new

loop do
  input = Thor::Shell::Basic.new.ask 'Input:', :yellow

  cli.quit if input.nil?

  puts # newline

  CLI.start(input.split, :shell => cli)

  puts # newline
end
